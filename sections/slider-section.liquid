<div class="custom-section" style="background-image:url({{ section.settings.background_img | img_url:'master' }});">
  <h2>{{ section.settings.custom-task }}</h2>
  {% for block in section.blocks %}
    <div class="block">
      {% if block.settings.block_image %}
        <img src="{{ block.settings.block_image | img_url: 'master' }}" alt="Block Image">
      {% endif %}
      <h4>{{ block.settings.block-one-heading }}</h4>
      <p>{{ block.settings.block-text-area }}</p>
      <a href="{{ block.settings.btn_link }}" class="custom_button">{{ block.settings.btn_text }}</a>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Section Task One",
    "settings": [
      {
        "type": "text",
        "id": "custom-task",
        "label": "Custom Task"
      },
      {
        "type": "image_picker",
        "id": "background_img",
        "label": "Background Image"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "heading",
        "settings": [
          {
            "type": "text",
            "id": "block-one-heading",
            "label": "Block One Heading"
          },
          {
            "type": "textarea",
            "id": "block-text-area",
            "label": "Block Text Area"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "Click Me"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link",
            "default": "/"
          },
          {
            "type": "image_picker",
            "id": "block_image",
            "label": "Block Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Slider Custom",
        "category": "slider"
      }
    ]
  }
{% endschema %}
